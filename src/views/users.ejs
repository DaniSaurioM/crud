<%- include("components/header") %>

<div class ="container">
    <div class="row mt-5">
        
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                      <input
                        type="text"
                        name="name"
                        placeholder="Nombre"
                        class="form-control mb-2"
                        autofocus
                      />
                      <input
                        type="text"
                        name="lastName"
                        placeholder="Apellido"
                        class="form-control mb-2"
                      />
                      <input
                        type="date"
                        name="birthday"
                        placeholder="Fecha de nacimiento"
                        class="form-control mb-2"
                      />
                      <input
                        type="text"
                        name="gender"
                        placeholder="Genero"
                        class="form-control mb-2"
                      />
                      <input
                        type="text"
                        name="address"
                        placeholder="Direccion"
                        class="form-control mb-2"
                      />
                      <input
                        type="text"
                        name="maritalStatus"
                        placeholder="Estado Civil"
                        class="form-control mb-2"
                      />
                      <input
                        type="text"
                        name="identification"
                        placeholder="DPI"
                        class="form-control mb-2"
                      />
              
                      <button type="submit" class="btn btn-info">GUARDAR INFORMARCION</button>
                    </form>
                  </div>
            </div>
        </div>
        <div class="col-md-7">
            <table class="table table-dark table-bordered table-hover">
                <thead>
                  <tr>
                    <td>nÂ°</td>
                    <td>Nombre</td>
                    <td>Apellido</td>
                    <td>Fecha de nacimiento</td>
                    <td>Genero</td>
                    <td>Direccion</td>
                    <td>Estado Civil</td>
                    <td>DPI</td>
                  </tr>
                </thead>
                <tbody>
                    <% if (data) { %> <% for(var i = 0; i < data.length; i++) {
                    %>
                    <tr>
                      <td><%= (i + 1) %></td>
                      <td><%= data[i].name %></td>
                      <td><%= data[i].lastName %></td>
                      <td><%= data[i].birthday %></td>
                      <td><%= data[i].gender %></td>
                      <td><%= data[i].maritalStatus %></td>
                      <td><%= data[i].identification %></td>
                      <td class="d-flex gap-2">
                        <a href="/update/<%= data[i].id %>" class="btn btn-info">
                          Actualizar
                        </a>
                        <a href="/delete/<%= data[i].id %>" class="btn btn-danger">
                          Eliminar
                        </a>
                      </td>
                    </tr>
                    <% } %> <% } %>
                  </tbody>
            </table>
        </div>
    </div>
</div>


<%- include("components/footer") %>